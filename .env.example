# Domain Configuration
DOMAIN=landscape.example.com

# SSL Certificate Type (true for ECDSA, false for RSA)
ECDSA=true

# Cloudflare DNS Validation (choose one method)
# Method 1: Global API (less secure)
#CF_Email=your-email@example.com
#CF_Key=your-global-api-key

# Method 2: Token (more secure, recommended)
#CF_Account_ID=your-account-id
#CF_Token=your-api-token

# AWS Route53 DNS Validation
#AWS_ACCESS_KEY_ID=your-access-key
#AWS_SECRET_ACCESS_KEY=your-secret-key

# FreeDNS Validation
#FREEDNS_User=your-username
#FREEDNS_Password=your-password

# Email Configuration
ADMIN_EMAIL=admin@example.com

# SMTP Relay (optional)
USE_SMTP_RELAY=false
#SMTP_RELAY_HOST=smtp.example.com
#SMTP_RELAY_USERNAME=username
#SMTP_RELAY_PASSWORD=password
#SMTP_RELAY_PORT=587

# OIDC Configuration (optional)
#OIDC_ISSUER=https://accounts.google.com/
#OIDC_CLIENT_ID=000000000000-aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa.apps.googleusercontent.com
#OIDC_CLIENT_SECRET=a4sDFAsdfA4F52as-asDfAsd
#OIDC_LOGOUT_URL=https://accounts.google.com/logout
